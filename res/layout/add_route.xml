    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
    
					    <EditText
					        android:id="@+id/place_name"
					        android:layout_width="0dp"
					        android:layout_height="wrap_content"
					        android:ems="10"
					        android:layout_weight="2"
					        android:layout_gravity="left"
					        android:hint="@string/place_name" />
					    
					    <ImageButton
					        android:contentDescription="@string/searchPlaces_button"
					        android:id="@+id/searchPlaces_button"
					        android:layout_width="40dp"
					        android:layout_height="40dp"
					        android:background="#0000"
					        android:layout_gravity="right"
					        android:layout_marginRight="5dp"
					        android:scaleType="fitXY"
					        android:layout_marginTop="3dp"
					        android:src="@drawable/search_white"
					        />
	</LinearLayout>
					    
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">


    <Button
        android:id="@+id/addPlaces_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/addPlace_button" />
   
  </RelativeLayout>
  
     
   
     
    <fragment 
 	 android:id="@+id/placeMap"
 	 android:layout_width="match_parent"
	 android:layout_height="250dp"
	 android:layout_marginLeft="5dip"
	 android:layout_marginRight="5dip"
 	 class="com.google.android.gms.maps.SupportMapFragment"/>
   
    
    
    
    <Button
        android:id="@+id/addTrip_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addTrip_button"
        android:layout_marginBottom="50dip" />
    
    </LinearLayout>
    
      </ScrollView>

